<!DOCTYPE html>
<html>
  <head>
   <% include ../partials/head.ejs %>
  </head>
  <body >
    <% include ../partials/nav.ejs %>
    <div id="app">

        <div class="top-events">
            <h2>SIGNUP</h2>
           </div>
         
           <div class="events">
             <div class="container">
              <div class="row">
                <div class="col-md-offset-2 col-md-6 col-xs-12">

                    <div class="" style="border-style: ridge;background:#e8e9ea; padding-left: 20px; padding-right: 20px;">

                        <h1 style="margin-bottom:20px;"><span class="fa fa-user"></span> Signup</h1>

                        <!-- show any messages that come back with authentication -->
                        <% if (message.length > 0) { %>
                            <div class="alert alert-danger"><%= message %></div>
                        <% } %>
                    
                        <!-- LOGIN FORM -->
                        <form action="/auth/front/signup" method="post">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" class="form-control" name="email">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" class="form-control" name="password">
                            </div>
                    
                            <button type="submit" class="btn btn-warning btn-lg">Signup</button>
                        </form>
                    
                        <hr>
                    
                        <p>Already have an account? <a href="/front/login">Login</a></p>
                        <p>Or go <a href="/">home</a>.</p>
                    
                    </div>
         
                </div>
              </div>
             </div>
           </div>

    </div>
    <% include ../partials/footer.ejs %>
  </body>
</html>