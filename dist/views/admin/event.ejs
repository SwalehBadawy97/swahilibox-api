<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


<title>Swahilibox : Admin</title>

<% include ../admin/partials/head.ejs %>
  </head>

<body>
<% include ../admin/partials/nav %>

<!--menu bar-->
 <aside>
<% include ../admin/partials/sidebar %>
 </aside>

 <section id="main-content">
   <section class="wrapper">
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
         <div class="panel panel-default">
             <div class="panel-heading">
                 <h3>
                   <%= event.title %>
                   <div class="btn-group pull-right">
                        <a class="btn btn-warning dropdown-toggle" data-toggle="dropdown" href="" title="actions"> Action <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                          <li><a href="/admin/publish_event<%= event._id %>"> Publish</a></li>
                          <li><a href="/admin/edit_event<%= event._id %>"> Edit</a></li>
                          <li><a href="/admin/event/remove<%= event._id %>"> Delete</a></li>
                        </ul>
                    </div>
                 </h3>
             </div>
            <div class="panel panel-body">

              <div class="row">
                <div class="col-md-4">
                  <div class="event-banner">
                      <img src="<%= event.banner %>" class="img img-responsive" style="height: 250px;overflow: hidden;margin-left:auto;margin-right:auto;display:block;">
                  </div>
                </div>
                <div class="col-md-8">
                  <h4><strong>Venue: </strong><%= event.venue %></h4>
                  <h4><strong>Start: </strong><%= event.start %></h4>
                  <h4><strong>End: </strong><%= event.end %></h4>
                  <h4><strong>Description: </strong><br>
                    <%= event.description %>
                  </h4>
                </div>
              </div>

            </div>
         </div>
        </div>
        <div class="col-md-12">
            <% if(event.status != "Notactive" ) { %>

                <div class="panel panel-default">
                        <div class="panel panel-body">
                       <table class="table">
                                      <thead>
                                      <tr>
                                          <th>TICKET NO</th>
                                          <th>NAME</th>
                                          <th>EMAIL</th>
                                      </tr>
                                      </thead>
                                      <tbody>
                                          <% for(let i=0; i<tickets.length; i++) { %>
                                      <tr>
                                          <td><%= tickets[i].ticketNo %></td>
                                          <td><%= tickets[i].email %></td>
                                          <td><%= tickets[i].name %></td>
                                      </tr>
                                      <% } %>
                                      </tbody>
                                  </table>
                </div>
                      </div>
            <% } %>
        </div>
      </div>
   </section>
</section>

<!--content-->

<!-- javascripts -->
<script>

        </script>

</body>
</html>
