<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> 


<title>Swahilibox : Admin</title>

<% include ../admin/partials/head.ejs %>
  </head>

<body>
<% include ../admin/partials/nav %>

<!--menu bar-->
 <aside>
<% include ../admin/partials/sidebar %>
 </aside>

 <section id="main-content">
        <section class="wrapper">						
                <div class="row">
              <div class="panel panel-default">
              <div class="panel panel-body">
             <table class="table">
                            <thead>
                            <tr>
                                <th>Email</th>
                                <th>Name</th>
                                <th>Role</th>
                                <th>Action</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                                <% for(let i=0; i<users.length; i++) { %>
                            <tr>
                                
                                <td><%= users[i].local.email %></td>
                                <td><%= users[i].local.name %></td>
                                <td><%= users[i].local.role %></td>
                                <% if(users[i].local.role == "Normal") {%>
                                <td><a href="/auth/role<%= users[i].local.email %>/Admin" class = "button">Make Admin</a></td>
                                <% }else { %>
                                <td><a href="/admin/role<%= users[i].local.email %>/Normal" class = "button">Revoke Admin Rights</a></td>
                                <% } %>
                                <td><a href="/admin/user_remove<%= users[i]._id %>" class= "button">Delete</a></td>
                            </tr>
                               <% } %>
                            </tbody>
                        </table>
      </div>
            </div>
         </div>
</section>
</section>		

<!--content-->

