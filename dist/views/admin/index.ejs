<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


<title>Swahilibox : Admin</title>

<% include ../admin/partials/head.ejs %>
  </head>

<body>
<% include ../admin/partials/nav %>

<!--menu bar-->
 <aside>
<% include ../admin/partials/sidebar %>
 </aside>

 <section id="main-content">
          <section class="wrapper">
            <div class="row">
				<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
					<div class="info-box dark-bg">
						<i class="fa fa-user"></i>
						<div class="count">60</div>
						<div class="title">Visitors</div>
					</div><!--/.info-box-->
				</div><!--/.col-->

				<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
					<div class="info-box dark-bg">
						<i class="fa fa-calendar"></i>
						<div class="count">2</div>
						<div class="title">Upcoming Events</div>
					</div><!--/.info-box-->
				</div><!--/.col-->

				<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
					<div class="info-box dark-bg">
						<i class="fa fa-list-alt"></i>
						<div class="count">4</div>
						<div class="title">Past Events</div>
					</div><!--/.info-box-->
			     </div><!--/.col-->
			</div><!--/.row-->

      <div class="row">
        <div class="col-md-12">
          <a href="/admin/create"><button id="" class="final-button">Create new event</button></a>
        </div>
        <% for(let i=0;i<events.length;i++) { %>
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="panel panel-default">
            <div class="panel-body" style="padding:0px!important;">
              <img class="img img-responsive" src="<%= events[i].banner %>" style="height: 250px;overflow: hidden;width:100%;">
              <div class="row" style="padding: 5px 15px 10px 15px;">
                <div class="col-md-12">
                  <h2><%= events[i].title %></h2>
                  <p class="text"><%= events[i].description %></p>
                  At <%= events[i].venue %>.</br>
                  <!--<strong>Start:</strong> <%= events[i].start %></br>
                  <strong>End:</strong> <%= events[i].end %></br>-->
                  <i class="text-muted">By <%= events[i].organiser %></i><br>

                  <a href="/admin/event<%= events[i]._id %>" class="btn btn-info">View</a>
                  <a href="/admin/event/delete<%= events[i].title %>" class="btn btn-danger">Delete</a>
                </div>
              </div>

            </div>
            </div>
            </div>
        <% } %>

      </div><!--/.row-->

 </section>
</section>

<!--content-->

<!-- javascripts -->

</body>
</html>
